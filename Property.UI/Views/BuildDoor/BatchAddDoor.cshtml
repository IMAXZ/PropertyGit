        $("#form").validate({
            errorPlacement: function (error, element) {
                if (element.parent().parent().parent().hasClass("form-control")) {
                    element.parent().parent().parent().before(error);
                }
                else
                    element.before(error)
            },
            rules: {
                DoorName: {
                    required: true,
                    maxlength: 50,
                    UnitDoorNameCheck: true,
                    UnitDoorNameNotNull: true,
                    //errorPlacement:true
