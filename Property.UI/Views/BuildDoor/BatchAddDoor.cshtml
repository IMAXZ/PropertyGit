        }

        //添加项目
        function addItem(obj) {
            var htmlstr = "";
            var index = $("#container").children("div").length;
            var labelId = index + "_lab";
            htmlstr += '<div class="form-group">';
            htmlstr += '<label class="control-label col-md-3">单元户名称<span class="text-danger"> *</span></label>'
