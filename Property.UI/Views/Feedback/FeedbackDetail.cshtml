@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "意见反馈详细";
}

@model Property.Entity.T_Feedback

<div class="row wrapper border-bottom white-bg page-heading">
    @Html.Partial("~/Views/Shared/_BreadCrumb.cshtml", new ViewDataDictionary { { "HasBack", "true" } })
</div>

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox product-detail">
                <div class="ibox-content">
                    <div class="row">
                        @if (!string.IsNullOrEmpty(Model.Img))
                        {
                            string[] imgs = Model.Img.Split(';');
                            <div class="col-md-5">
                                <div class="carousel slide" id="carousel">
                                    <ol class="carousel-indicators">
                                        @for (int i = 0; i < imgs.Count(); i++)
                                        {
                                            if (i == 0)
                                            {
                                                <li data-slide-to="@i" data-target="#carousel" class="active"></li>
                                            }
                                            else
                                            {
                                                <li data-slide-to="@i" data-target="#carousel"></li>
                                            }
                                        }
                                    </ol>

                                    <div class="carousel-inner">
                                        @for (int i = 0; i < imgs.Count(); i++)
                                        {
                                            if (i == 0)
                                            {
                                                <div class="item active">
                                                    <img alt="image" class="img-container" src="@imgs[i]">
                                                </div>
                                            }
                                            else
                                            {
                                                <div class="item">
                                                    <img alt="image" class="img-container" src="@imgs[i]">
                                                </div>
                                            }
                                        }
                                    </div>
                                    <a data-slide="prev" href="#carousel" class="left carousel-control">
                                        <span class="icon-prev"></span>
                                    </a>
                                    <a data-slide="next" href="#carousel" class="right carousel-control">
                                        <span class="icon-next"></span>
                                    </a>
                                </div>

                            </div>
                            <div class="col-md-7">
                                <div class="ibox product-detail">
                                    <h3 class="font-bold m-b-xs">
                                        反馈内容
                                    </h3>
                                    <hr>
                                    <div>
                                        @Html.Raw(Model.Content)
                                    </div>
                                </div>
                                <div>
                                    <span class="pull-right">
                                        @if (Model.User.Gender == 1)
                                        {
                                            <i class="fa fa-female"> - </i>
                                        }
                                        else
                                        {
                                            <i class="fa fa-male"> - </i>
                                        }
                                        @Model.User.UserName
                                    </span>
                                </div>
                            </div>
                        }
                        else
                        {
                            <div class="col-md-12">
                                <div class="ibox product-detail">
                                    <h3 class="font-bold m-b-xs">
                                        反馈内容
                                    </h3>
                                    <hr>
                                    <div>
                                        @Html.Raw(Model.Content)
                                    </div>
                                </div>
                                <div>
                                    <span class="pull-right">
                                        @if (Model.User.Gender == 1)
                                        {
                                            <i class="fa fa-female"> - </i>
                                        }
                                        else
                                        {
                                            <i class="fa fa-male"> - </i>
                                        }
                                        @Model.User.UserName
                                    </span>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryui")
}


