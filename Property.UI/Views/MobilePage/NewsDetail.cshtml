@model Property.UI.Models.NewsNoticeModel
@{
    Layout = "";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>新闻公告详细</title>
    <!-- Add jQuery Style direct - used for jQGrid plugin -->
    <link href="@Url.Content("~/Scripts/plugins/jquery-ui/jquery-ui.css")" rel="stylesheet" type="text/css" />

    <!-- Primary Inspinia style -->
    @Styles.Render("~/Content/css")
    @Styles.Render("~/font-awesome/css")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script>
        $(function () {
            var w = $(".ibox-content").width();//容器宽度
            $(".ibox-content img").each(function () {//如果有很多图片，我们可以使用each()遍历
                var img_w = $(this).width();//图片宽度
                var img_h = $(this).height();//图片高度
                if (img_w > w) {//如果图片宽度超出容器宽度--要撑破了
                    var height = (w * img_h) / img_w; //高度等比缩放
                    $(this).css({ "width": w, "height": height });//设置缩放后的宽度和高度
                }
            });
        });
    </script>

</head>
<body class="gray-bg">
    <div class="col-lg-12" style="padding:10px;">
        <div class="ibox">
            <div class="ibox-content">
                <div class="text-center">
                    <h3>
                        @Model.Title
                    </h3>
                    <div class="text-right">
                        <span class="text-muted">
                            <i class="fa fa-clock-o"></i>
                            @Model.PuslishedTime
                        </span>
                    </div>
                </div>
                @Html.Raw(Model.Content)
            </div>
        </div>
    </div>
</body>
</html>
