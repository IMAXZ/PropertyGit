@model Property.UI.Models.NewsNoticeModel
@{
    ViewBag.Title = "新增新闻公告";
}
<div class="row wrapper border-bottom white-bg page-heading">
    @Html.Partial("~/Views/Shared/_BreadCrumb.cshtml", new ViewDataDictionary { { "HasBack", "true" } })
</div>

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>致 @Html.GetPropertyPlaceName() 全体业主：</h5>
                </div>
                <div class="ibox-content">
                    @using (Ajax.BeginForm("AddNews", "NewsNotice", "", new AjaxOptions { HttpMethod = "Post", OnSuccess = "OnSuccess", OnFailure = "OnFailure" }, new { id = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        <div class="form-horizontal">
                            <div class="form-group">
                                <label class="col-sm-1 control-label">标题：</label>
                                <div class="col-sm-11">
                                    @Html.TextBoxFor(m => m.Title, new { @class = "form-control", @maxlength = 100 })
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="Content" class="col-sm-1 control-label">内容：</label>
                                <div class="col-sm-11">
                                    @Html.TextAreaFor(m => m.Content, new { @style = "width:100%;height:400px" })
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-1 control-label">是否发布</label>
                                <div class="col-sm-11">
                                    <div class="i-checks">
                                        @Html.CheckBoxFor(m => m.PublishedFlag)
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-9 col-md-offset-1">
                                    <input type="submit" value="确定" class="btn btn-primary" />
                                    <a class="btn btn-white" href="/NewsNotice/NoticeList">取消</a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>


@section Styles {
    @Styles.Render("~/plugins/sweetAlertStyles")
}

@section Scripts {
    @Scripts.Render("~/plugins/sweetAlert")
    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/plugins/validate")
    <script type="text/javascript" src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    <script type="text/javascript" src="~/Ueditor/ueditor.config.js"></script>
    <script type="text/javascript" src="~/Ueditor/ueditor.all.min.js"></script>
    <script type="text/javascript" src="~/Ueditor/lang/zh-cn/zh-cn.js"></script>
    <!-- 编辑器源码文件 -->
    <script type="text/javascript">

        $().ready(function () {
            UE.getEditor('Content');
            var validator = $("#form").submit(function () {
                UE.getEditor('Content').sync("form");
            }).validate({
                ignore: "",
                rules: {
                    Title: {
                        required: true,
                        maxlength: 100
                    },
                    Content: {
                        required: true,
                    }
                },
                messages: {
                    Title: {
                        required: "请输入标题",
                        maxlength: "长度不能超过100位"
                    },
                    Content: {
                        required: "请输入内容"
                    }
                }
            });
        });

        function OnSuccess(data) {
            if (data.Code == "OK") {
                window.location.href = "/NewsNotice/NoticeList";
            }
            else {
                swal({
                    title: data.Msg,
                    type: "error",
                    text: ""
                });
            }
        }
        function OnFailure(err) {
            swal({
                title: "请求出现异常,发布失败",
                type: "error",
                text: ""
            });
        }
    </script>
}
