@{
    Layout = "~/Views/Shared/_CompanyLayout.cshtml";
    ViewBag.Title = "住宅业主详细";
}

@model Property.Entity.T_HouseUser
<div class="row wrapper border-bottom white-bg page-heading">
    @Html.Partial("~/Views/Shared/_BreadCrumb.cshtml", new ViewDataDictionary { { "HasBack", "true" } })
</div>
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox product-detail">
                <div class="ibox-content">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="table-responsive">
                                <table class="table table-striped table-bordered">
                                    <tbody>
                                        <tr>
                                            <th colspan="6" class="text-center"><label>住宅业主详细</label></th>
                                        </tr>
                                        <tr>
                                            <td class="col-md-2"><label>业主姓名</label></td>
                                            <td class="col-md-10" colspan="5">@Model.Name</td>
                                        </tr>
                                        <tr>
                                            <td class="col-md-2"><label>性别</label></td>
                                            <td class="col-md-10" colspan="5">
                                                @if (Model.Gender == Property.Common.ConstantParam.GENDER_ZERO)
                                                {
                                                    <span>女</span>
                                                }
                                                @if (Model.Gender == Property.Common.ConstantParam.GENDER_ONE)
                                                {
                                                    <span>男</span>
                                                }
                                            </td>
                                        </tr>
                                        <tr>
                                            <td class="col-md-2"><label>电话</label></td>
                                            <td class="col-md-10" colspan="5">@Model.Phone</td>
                                        </tr>
                                        <tr>
                                            <td class="col-md-2"><label>小区名称</label></td>
                                            <td class="col-md-10" colspan="5">@Model.PropertyPlace.Name</td>
                                        </tr>
                                        <tr>
                                            <td class="col-md-2"><label>楼座名称</label></td>
                                            <td class="col-md-2">@Model.BuildDoor.BuildUnit.Build.BuildName</td>
                                            <td class="col-md-2"><label>单元名称</label></td>
                                            <td class="col-md-2">@Model.BuildDoor.BuildUnit.UnitName</td>
                                            <td class="col-md-2"><label>单元户名称</label></td>
                                            <td class="col-md-2">@Model.BuildDoor.DoorName</td>
                                        </tr>
                                        <tr>
                                            <td class="col-md-2"><label>业主备注</label></td>
                                            <td class="col-md-10" colspan="5">@Model.Desc</td>
                                        </tr>
                                        <tr>
                                            <td class="col-md-2"><label>缴费备注</label></td>
                                            <td class="col-md-10" colspan="5">@Model.PayDesc</td>
                                        </tr>
                                        <tr>
                                            <td class="col-md-2"><label>服务备注</label></td>
                                            <td class="col-md-10" colspan="5">@Model.ServiceDesc</td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
