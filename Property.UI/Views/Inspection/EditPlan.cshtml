@section Scripts {
    @Scripts.Render("~/plugins/sweetAlert")
    @Scripts.Render("~/plugins/iCheck")
    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/plugins/validate")
    @Scripts.Render("~/plugins/dataPicker")

    <script type="text/javascript" src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    <script type="text/javascript" src="~/Scripts/validate/InspectionPlanValidate.js"></script>
    <script type="text/javascript">

        $(document).ready(function () {

            $('.date').datepicker({
                clearBtn: false
            });

            $('.i-checks').iCheck({
                checkboxClass: 'icheckbox_square-green'
            });

            //巡检类型变化监听
            $('#Type').change(function () {

                var currentDate = new Date();
                var year = currentDate.getFullYear();
                var month = currentDate.getMonth() + 1;
                var date = currentDate.getDate();
                var day = currentDate.getDay();
                if (day == 0) {
                    day = 7;
                }

                //如果选择日巡检
                if ($(this).val() == 0) {

                    $("#BeginDate").val(year + '-' + month + '-' + date);
                    $("#EndDate").val(year + '-' + month + '-' + date);

                    $("#DayPlans").show();
                    $("#WeekPlans").find("select").val("");
                    $("#WeekPlans").hide();
                    $("#MonthPlans").find("select").val("");
                    $("#MonthPlans").hide();
                    for (var i = 2; i < 10; i++) {
                        $("#WeekPlan" + i).hide();
                        $("#MonthPlan" + i).hide();
                    }
                    //如果选择周巡检
                } else if ($(this).val() == 1) {

                    currentDate.setDate(date - day + 1);
                    year = currentDate.getFullYear();
                    month = currentDate.getMonth() + 1;
                    date = currentDate.getDate();
                    $("#BeginDate").val(year + '-' + month + '-' + date);
                    currentDate.setDate(date + 6);
                    var lastdate = currentDate.getFullYear() + '-' + (currentDate.getMonth() + 1) + '-' + currentDate.getDate();
                    $("#EndDate").val(lastdate);

                    $("#DayPlans").find("select").val("");
                    $("#DayPlans").hide();
                    $("#WeekPlans").show();
                    $("#MonthPlans").find("select").val("");
                    $("#MonthPlans").hide();
                    for (var i = 2; i < 10; i++) {
                        $("#DayPlan" + i).hide();
                        $("#MonthPlan" + i).hide();
                    }
                    //如果选择月巡检
                } else {
                    $("#BeginDate").val(year + '-' + month + '-01');
                    var day = new Date(year, month, 0);
                    var lastdate = year + '-' + month + '-' + day.getDate();
                    $("#EndDate").val(lastdate);

                    $("#DayPlans").find("select").val("");
                    $("#DayPlans").hide();
                    $("#WeekPlans").find("select").val("");
                    $("#WeekPlans").hide();
                    $("#MonthPlans").show();
                    for (var i = 2; i < 10; i++) {
                        $("#WeekPlan" + i).hide();
                        $("#WeekPlan" + i).hide();
                    }
                }
                //更改开始结束时间
                $('.date').datepicker('update');

                $("#IsRandom").val(0);
                $("#RandomNum").val("");
                $("#RandomNumDiv").hide();
            });

            //是否随机变化监听
            $('#IsRandom').change(function () {

                //如果是不随机巡检
                if ($(this).val() == 0) {
                    $("#RandomNumDiv").hide();
                    //如果选择日巡检
                    if ($("#Type").val() == 0) {
                        $("#DayPlans").show();
                    } else if ($("#Type").val() == 1) {
                        $("#WeekPlans").show();
                    } else {
                        $("#MonthPlans").show();
                    }
                    for (var i = 2; i < 10; i++) {
                        $("#DayPlan" + i).hide();
                        $("#WeekPlan" + i).hide();
                        $("#MonthPlan" + i).hide();
                    }
                } else {
                    //如果是随机巡检
                    $("#RandomNumDiv").show();
                    $("#DayPlans").hide();
                    $("#WeekPlans").hide();
                    $("#MonthPlans").hide();
                }
                $("#RandomNum").val("");
            });
        });

        $(window).load(function (){

            //巡检安排初始化
            var type = @Html.Raw(Model.Type);
            var IsRamdom = @Html.Raw(Model.IsRandom);
            //如果不随机
            if(IsRamdom == 0){
                if(type == 0)
                {
                    $("#DayPlans").show();

                }else if(type == 1)
                {
                    $("#WeekPlans").show();
                }else
                {
                    $("#MonthPlans").show();
                }
            }else{
                $("#RandomNumDiv").show();
            }
        });

        //添加日巡检安排
        function addDayPlan(obj) {

            var num = $("#DayPlans").children("div:visible").length;
            if (num < 10) {
