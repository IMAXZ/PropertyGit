@{
    ViewBag.Title = "门店账户表";
    Layout = "~/Views/Shared/_ShopLayout.cshtml";
}

@using Webdiyer.WebControls.Mvc
@model Property.UI.Models.ShopAccountModel
<div class="row wrapper border-bottom white-bg page-heading">
    @Html.Partial("~/Views/Shared/_BreadCrumb.cshtml", new ViewDataDictionary { { "HasBack", "false" } })
</div>
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>门店账户表</h5>
                </div>
                <div class="ibox-content">
                    <br />
                    <div class="row">
                        <div class="col-md-6">
                            <div class="table-responsive">
                                <table class="table table-striped table-bordered">
                                    <tr>
                                        <th colspan="6" class="text-center"><label>微信</label></th>
                                    </tr>
                                    <tbody>
                                        <tr>
                                            <td class="col-md-1"><label>微信APP ID</label></td>
                                            @if (Model != null)
                                            {
                                                <td class="col-md-5">@Model.WeChatNumber</td>
                                            }
                                            @if (Model == null)
                                            {
                                                <td class="col-md-5"></td>
                                            }
                                        </tr>
                                        <tr>
                                            <td class="col-md-1"><label>商户号</label></td>
                                            @if (Model != null)
                                            {
                                                <td class="col-md-5">@Model.WeChatMerchantNo</td>
                                            }
                                            @if (Model == null)
                                            {
                                                <td class="col-md-5"></td>
                                            }
                                        </tr>
                                        <tr>
                                            <td class="col-md-1"><label>秘钥</label></td>
                                            @if (Model != null)
                                            {
                                                <td class="col-md-5" style="word-break:break-all">@Model.WeChatKey</td>
                                            }
                                            @if (Model == null)
                                            {
                                                <td class="col-md-5"></td>
                                            }
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                            <div class="text-center">
                                <a href="/ShopAccount/SetWeChatAccount" class="btn btn-outline btn-primary btn-sm">设置</a>
                            </div>
                        </div>
                        
                        <div class="col-md-6">
                            <div class="table-responsive">
                                <table class="table table-striped table-bordered">
                                    <tr>
                                        <th colspan="6" class="text-center"><label>支付宝</label></th>
                                    </tr>
                                    <tbody>
                                        <tr>
                                            <td class="col-md-1"><label>支付账号</label></td>
                                            @if (Model != null)
                                            {
                                                <td class="col-md-5">@Model.AlipayNumber</td>
                                            }
                                            @if (Model == null)
                                            {
                                                <td class="col-md-5"></td>
                                            }
                                        </tr>
                                        <tr>
                                            <td class="col-md-1"><label>商户号</label></td>
                                            @if (Model != null)
                                            {
                                                <td class="col-md-5">@Model.AlipayMerchantNo</td>
                                            }
                                            @if (Model == null)
                                            {
                                                <td class="col-md-5"></td>
                                            }
                                        </tr>
                                        <tr>
                                            <td class="col-md-1"><label>秘钥</label></td>
                                            @if (Model != null)
                                            {
                                                <td class="col-md-5" style="word-break:break-all">@Model.AlipayKey</td>
                                            }
                                            @if (Model == null)
                                            {
                                                <td class="col-md-5"></td>
                                            }
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                            <div class="text-center">
                                <a href="/ShopAccount/SetAlipayAccount" class="btn btn-outline btn-primary btn-sm">设置</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

