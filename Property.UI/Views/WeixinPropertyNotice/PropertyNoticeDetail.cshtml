@{
    ViewBag.Title = "公告详情";
    Layout = "~/Views/Shared/_WeixinLayout.cshtml";
    //Layout = null;
}

@model Property.UI.Models.Weixin.PropertyNoticeDetailModel

<div class="border-top white-bg divPagePadding" style="margin:0.8rem 0 0 0;">
    <div class="media-body" style="padding:0 10px;">
        <h4 style="text-align:center;">@Model.Title</h4>
        <p class="place">@Model.PlaceName&nbsp;&nbsp;<span class="timeColor">@Model.PublishedTime</span></p>
    </div>
</div>
<div class="border-bottom white-bg divPagePadding">
    <div class="media-body" style="padding:0 10px;">
        <small class="text-muted" style="font-size: 13px;">
