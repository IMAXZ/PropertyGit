    </div>
</div>

@section Styles{

    <style type="text/css">
        .border-top {
            border-top: 1px solid #e7eaec !important;
        }

        .timeColor {
            color: #A9A9B4;
        }

        .place {
            color: #0172ff;
            font-family: 黑体;
        }

        .divPagePadding {
            padding: 6px;
        }

        .text-muted img {
            max-width: 100%;
        }
    </style>
}



